<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main_User.userInfoActivity">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".RegisterActivity">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:gravity="center_horizontal|center"
                android:singleLine="true"
                android:text="个人资料"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlue"
                android:textSize="20dp"

                />

            <Button
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlue"
                android:ellipsize="end"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="返回"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:visibility="invisible"



                />




        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp">

            <TextView

                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="18dp"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="手机" />

            <TextView
                android:id="@+id/tv_infro_phone"
                android:layout_width="217dp"
                android:layout_height="44dp"
                android:layout_marginLeft="51dp"

                android:paddingTop="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp">

            <TextView
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="密码"
                android:textSize="18dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_infro_pwd"
                android:layout_width="220dp"
                android:paddingTop="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51dp"

       />

        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_realname"
                android:layout_width="52dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="姓名"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_infro_name"
                android:layout_width="220dp"
                android:paddingTop="15dp"

                android:layout_height="wrap_content"
                android:layout_marginLeft="46dp"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="身份证"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_infro_idCard"
                android:layout_width="220dp"
                android:paddingTop="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"

                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="性别"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_info_sex"
                android:layout_width="220dp"
                android:paddingTop="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
             />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="62dp"
                android:layout_height="34dp"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="邮箱"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/tv_info_email"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:paddingTop="15dp" />

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/train"
            android:paddingTop="50dp"

            />




    </LinearLayout>

\








</LinearLayout>