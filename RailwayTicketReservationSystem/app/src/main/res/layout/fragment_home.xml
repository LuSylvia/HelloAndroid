<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main_User.homeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12406，购票更快捷！"
        android:layout_gravity="center_horizontal"
        android:textSize="35dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_startCity"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/btn_switch"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_exchange" />

        <Button
            android:id="@+id/btn_arriveCIty"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_startdate"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="出发日期"
            android:textSize="25dp" />

        <Button
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_calendar"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="6月17日"
            android:textSize="25dp"
            android:background="@color/colorWhite"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_week"
            android:text="周一"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/colorBlue"
        android:text="查询车票"
        android:textColor="@color/colorWhite"
        android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="只支持查询6月17,18,19号的部分火车！"

            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            />




    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ic_16ge" />



</RelativeLayout>